{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"//#check": {},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["*.ts", "*.tsx", "*.css", "package.json", "tsconfig*json"],
			"outputs": ["cjs", "dist", "esm", "tokens.css", "*.tsbuildinfo"]
		},
		"build-doc": {
			"dependsOn": ["^build"],
			"inputs": ["*.ts", "*.tsx", "*.css", "*.md", "*.mdx", "package.json", "tsconfig*json", ".storybook"],
			"outputs": ["docs", "storybook-static"]
		},
		"clean": {
			"cache": false
		},
		"cov": {
			"dependsOn": ["^build"],
			"outputs": ["__vis__/**", "coverage/**"]
		},
		"depcheck": {
			"dependsOn": ["^build"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"nuke": {
			"cache": false
		},
		"sb": {
			"cache": false,
			"env": ["NODE_ENV=development"],
			"persistent": true
		},
		"size": {
			"dependsOn": ["build"]
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["__vis__/**"]
		}
	}
}
