{
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"build:doc": "turbo run build-doc",
		"check": "biome check",
		"check:fix": "biome check --fix",
		"clean": "turbo run clean",
		"cov": "vitest run --coverage",
		"coverage": "turbo run coverage",
		"cs": "changeset",
		"css": "pnpm --filter ./libs/css",
		"depcheck": "turbo run depcheck",
		"docs": "pnpm --filter ./apps/docs",
		"nuke": "run-s nuke:pkgs nuke:root",
		"nuke:pkgs": "turbo run nuke",
		"nuke:root": "rimraf node_modules",
		"prepare": "husky",
		"release": "changeset publish",
		"sb": "turbo run sb",
		"size": "turbo run size",
		"test": "turbo run test",
		"tk": "pnpm --filter ./libs/toolkits",
		"types": "pnpm --filter ./libs/types",
		"verify": "turbo run check cov depcheck size",
		"version": "changeset version && node scripts/update-version-tags.mjs",
		"w": "vitest"
	},
	"dependencies": {
		"@biomejs/biome": "^2.3.14",
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@locofy/cli": "^0.0.81",
		"@repobuddy/biome": "^2.3.1",
		"@repobuddy/vitest": "^2.1.1",
		"@types/react": "^19.2.13",
		"@vitest/coverage-v8": "^4.0.18",
		"husky": "^9.1.7",
		"npm-run-all2": "^7.0.2",
		"pathe": "^2.0.3",
		"playwright": "latest",
		"rimraf": "~6.0.1",
		"turbo": "^2.8.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"overrides": {
			"react": "catalog:",
			"react-dom": "catalog:"
		}
	},
	"packageManager": "pnpm@10.28.2"
}
